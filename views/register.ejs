<% include ./partials/head %> <% include ./partials/navbar %>

<div class="container">
  <div class="row mt-2">
    <div
      class="col-12 col-sm-12 col-md-12 col-lg-8 col-xl-8 offset-lg-2 offset-xl-2"
    >
      <div class="card shadow-sm">
        <div class="card-content">
          <% include ./partials/messages %>
          <form action="/register" method="POST">
            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="name">Name</label>
                <input
                  type="name"
                  id="name"
                  name="name"
                  class="form-control"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>

              <div class="form-group col-md-4">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  value="<%= typeof email != 'undefined' ? email : '' %>"
                />
              </div>

              <div class="form-group col-md-4">
                <label for="phonenumber">Phone Number</label>
                <input
                  type="text"
                  id="phonenumber"
                  name="phonenumber"
                  class="form-control"
                  value="<%= typeof phonenumber != 'undefined' ? phonenumber : '' %>"
                />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="address">Address</label>
                <input
                  type="text"
                  id="input"
                  name="location[address]"
                  class="form-control"
                  value="<%= typeof address != 'undefined' ? location[address] : '' %>"
                />
              </div>

              <div class="form-group col-md-4">
                <label for="longitude">Address Longitude</label>
                <input
                  class="form-control"
                  id="longInput"
                  type="text"
                  value="12.454646"
                  name="location[coordinates][0]"
                  readonly
                />
              </div>

              <div class="form-group col-md-4">
                <label for="longitude">Address Latitude</label>
                <input
                  class="form-control"
                  id="latInput"
                  type="text"
                  value="-13.4554"
                  name="location[coordinates][1]"
                  readonly
                />
              </div>
            </div>

            <div class="form-row">
              <div class="form-group col-md-4">
                <label for="photo">Example file input</label>
                <input
                  type="file"
                  class="form-control-file border p-1"
                  name="photo"
                  id="photo"
                  accept="image/png, image/jpeg"
                />
              </div>

              <div class="form-group col-md-4">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  value="<%= typeof password != 'undefined' ? password : '' %>"
                />
              </div>

              <div class="form-group col-md-4">
                <label for="password2">Confirm Password</label>
                <input
                  type="password"
                  id="password2"
                  name="password2"
                  class="form-control"
                  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
                />
              </div>
            </div>

            <div class="form-row"></div>

            <div class="form-row">
              <div class="form-group col-md-12">
                <label for="description">Description</label>
                <textarea
                  class="form-control"
                  id="description"
                  rows="2"
                  name="description"
                  value="<%= typeof description != 'undefined' ? description : '' %>"
                ></textarea>
              </div>
            </div>

            <button type="submit" class="btn shadow-sm btn-primary btn-block">
              Register
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<% include ./partials/footer %>
