<% include ./partials/head %>
<div class="container">
    <div class="row mt-5">
      <div class="col-12 col-sm-12 col-m6-12 col-lg-6 col-xl-6 offset-lg-3 offset-xl-3">
        <div class="card card-body shadow-sm">
          <% include ./partials/messages %>
          <form action="/register" method="POST">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="name">Name</label>
                <input
                  type="name"
                  id="name"
                  name="name"
                  class="form-control"
                  value="<%= user.name %>"
                />
              </div>
  
              <div class="form-group col-md-6">
                  <label for="email">Email</label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="form-control"
                    value="<%= user.email %>"
                  />
                </div>
            </div>

  
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="address">Address</label>
                    <input
                      type="text"
                      id="address"
                      name="address"
                      class="form-control"
                      value="<%= user.address %>"
                    />
                  </div>
  
                  <div class="form-group col-md-6">
                      <label for="phonenumber">Phone Number</label>
                      <input
                        type="text"
                        id="phonenumber"
                        name="phonenumber"
                        class="form-control"
                        value="<%= user.phonenumber %>"
                      />
                  </div>
            </div>
  
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" rows="2" name="description"><%= user.description %></textarea>
                  </div>
                </div>
            <hr />
            <button type="submit" class="btn shadow-sm btn-primary btn-block">
              UPDATE
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>

<% include ./partials/footer %>
