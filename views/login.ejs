<% include ./partials/head %>

<% include ./partials/navbar %>


<div class="container">
  <div class="row mt-5">
    <div class="col-12 col-sm-12 col-m6-12 col-lg-6 col-xl-6 offset-lg-3 offset-xl-3">
      <div class="card shadow-sm">
        <div class="card-body">
            <% include ./partials/messages %>

            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-control"
                  placeholder="Enter Email"
                />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input
                  type="password"
                  id="password"
                  name="password"
                  class="form-control"
                  placeholder="Enter Password"
                />
              </div>

              <div class="form-group">
                  <hr>
              </div>

              <div class="form-group">
                  <button type="submit" class="btn shadow-sm btn-primary btn-block">Login</button>
              </div>
            </form>
        </div>
        <div class="card-footer text-center">
            No Account? <a href="/register">Register</a>

        </div>
      </div>
    </div>
  </div>
</div>

<% include ./partials/footer %>
